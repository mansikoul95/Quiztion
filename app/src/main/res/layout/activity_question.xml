<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundimg"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/questionno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Question 0"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:textSize="22sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:lineHeight="40dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text=''/>
        <!--when selected elevate it to 30dp-->
        <LinearLayout
            android:layout_width="@dimen/tablet"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <!--a-->
        <LinearLayout
            android:layout_width="@dimen/tabletchoice"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundedcorners"
            android:onClick="selectchoice"
            android:tag="A"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:paddingTop="17dp"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:text="A"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/shadedgrey"/>
            <TextView
                android:id="@+id/choice1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingTop="9dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <!--a-->
        <!--b-->
        <LinearLayout
            android:layout_width="@dimen/tabletchoice"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            android:elevation="5dp"
            android:onClick="selectchoice"
            android:tag="B"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundedcorners"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:paddingTop="17dp"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:text="B"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/shadedgrey"/>
            <TextView
                android:id="@+id/choice2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingTop="9dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <!--b-->
        <!--c-->
        <LinearLayout
            android:layout_width="@dimen/tabletchoice"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            android:elevation="5dp"
            android:onClick="selectchoice"
            android:tag="C"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundedcorners"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:paddingTop="17dp"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:text="C"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/shadedgrey"/>
            <TextView
                android:id="@+id/choice3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingTop="9dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <!--c-->
        <!--d-->
        <LinearLayout
            android:layout_width="@dimen/tabletchoice"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            android:elevation="5dp"
            android:onClick="selectchoice"
            android:tag="D"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundedcorners"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:paddingTop="17dp"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:text="D"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/shadedgrey"/>
            <TextView
                android:id="@+id/choice4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingTop="9dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <!--d-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/progresscircle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp">

                <ProgressBar
                    android:layout_width="120dp"
                    android:id="@+id/progressbar"
                    android:layout_height="120dp"
                    android:max="1000"
                    style="?android:progressBarStyleHorizontal"
                    android:progress="0"
                    android:progressDrawable="@drawable/circle">

                </ProgressBar>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressqno"
                    android:paddingTop="23dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"/>

            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>