<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="About Us"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:textSize="22sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:lineHeight="25dp"
            android:text="Created by: \nAdarsh Sodagudi\nMansi Koul"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="10dp"
            android:lineHeight="25dp"
            android:text="Terms of use"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:lineHeight="30dp"
            android:text="Welcome to Quiztion!\nThese Terms of Use govern your use of Quiztion and provide information about the Quiztion Service, outlined below. When you create an Quiztion account or use Quiztion, you agree to these terms."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:lineHeight="30dp"
            android:text="ARBITRATION NOTICE: YOU AGREE THAT DISPUTES BETWEEN YOU AND US WILL BE RESOLVED BY BINDING, INDIVIDUAL ARBITRATION AND YOU WAIVE YOUR RIGHT TO PARTICIPATE IN A CLASS ACTION LAWSUIT OR CLASS-WIDE ARBITRATION. WE EXPLAIN SOME EXCEPTIONS AND HOW YOU CAN OPT OUT OF ARBITRATION BELOW."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:lineHeight="30dp"
            android:text="The Quiztion Service: \n1) Ensuring a stable global infrastructure for our Service.\n2) Connecting you with brands, products, and services in ways you care about.\n3) Research and innovation.\n4) Developing and using technologies that help us consistently serve our growing community.\n5) Fostering a positive, inclusive, and safe environment.\n6) Providing consistent and seamless experiences across other Quiztion Company Products."/>
    </LinearLayout>
</ScrollView>
</LinearLayout>