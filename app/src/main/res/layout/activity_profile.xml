<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/backgroundimg">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:padding="22dp"
            android:background="@drawable/whiteroundedcorners"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/pusernameid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteroundedcorners"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/ppasswordid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteroundedcorners"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/pinstitutionid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteroundedcorners"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/pemailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteroundedcorners"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/pphoneid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteroundedcorners"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:onClick="gotoeditprofile"
                android:layout_height="50dp"
                android:background="#9001B6A5"
                android:textColor="@color/white"
                android:text="Edit Profile"/>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>